<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    tools:context="com.example.sony.training.DetailActivity"
    >

    <TextView
        android:id="@+id/detailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/detail"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_50"/>

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_below="@+id/detailTextView"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/userNameDetailTextView"
        android:layout_below="@+id/avatarImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_30"
        android:padding="@dimen/dp_10"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:id="@+id/urlDetailTextView"
        android:layout_below="@+id/userNameDetailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:textSize="@dimen/dp_24"
        android:textStyle="italic"
        android:textColor="@color/colorBlack"
        />

</RelativeLayout>
