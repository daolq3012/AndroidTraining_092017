<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    tools:context="com.example.sony.training.LoginActivity">

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_title"
            style="@style/text_title_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_marginTop="110dp"
            android:text="@string/txt_Welcome" />

        <TextView
            android:id="@+id/textView"
            style="@style/text_intro_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title" />

        <EditText
            android:id="@+id/edt_email"
            style="@style/background_views"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:hint="@string/email_address" />

        <EditText
            android:id="@+id/edt_password"
            style="@style/background_views"
            android:layout_below="@+id/edt_email"
            android:layout_centerHorizontal="true"
            android:hint="@string/text_Password" />

        <Button
            android:id="@+id/btn_login"
            style="@style/background_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_password"
            android:background="@drawable/duongvien_goctron_green"
            android:text="@string/text_Login" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout">

            <TextView
                android:id="@+id/txt_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:padding="@dimen/dp_10"
                android:text="@string/text_Password"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/px_60" />

            <TextView
                android:id="@+id/txt_detach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/txt_password"
                android:padding="@dimen/dp_10"
                android:text="|"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_toRightOf="@+id/txt_detach"
                android:padding="@dimen/dp_10"
                android:text="@string/text_Register"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/px_60" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
