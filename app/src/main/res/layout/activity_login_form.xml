<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context="com.example.sony.training.LoginForm">

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/welcome_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/describe_TextView"
        android:layout_below="@+id/welcome_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/describe_login"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/edittext_shape"
        android:textAlignment="center"
        android:id="@+id/email_EditText"
        android:layout_below="@+id/describe_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/colorWhite"
        android:hint="@string/hint_email"/>
    <EditText
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:background="@drawable/edittext_shape"
        android:textAlignment="center"
        android:textColorHint="@color/colorWhite"
        android:id="@+id/password_EditText"
        android:layout_below="@+id/email_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/hint_password"/>
    <Button
        android:layout_marginTop="15dp"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button_shape"
        android:id="@+id/login_Button"
        android:layout_below="@+id/password_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/password_TextView"
        android:layout_below="@+id/login_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"
        />
    <TextView
        android:layout_toRightOf="@+id/password_TextView"
        android:layout_marginTop="10dp"
        android:id="@+id/view"
        android:layout_below="@+id/login_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_toRightOf="@+id/view"
        android:layout_marginTop="10dp"
        android:id="@+id/register_TextView"
        android:layout_below="@+id/login_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"/>

</RelativeLayout>
