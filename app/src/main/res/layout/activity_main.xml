<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sony.training.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/hinhnen"
    >
    <TextView
        android:id="@+id/welcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="center_horizontal"
        style="@style/vu1"
        android:layout_marginTop="@dimen/dp_43"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/usename"

        android:hint="nhap uesrname "
        style="@style/editex"

        android:layout_below="@+id/welcom"

        android:layout_marginLeft="@dimen/dp_40"



       />
     <EditText
         android:id="@+id/password"
         style="@style/editex"
         android:layout_below="@+id/usename"
         android:layout_alignLeft="@+id/usename"
         android:hint="nhap password"



        />
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/password"
         android:text="Login"
         android:layout_centerVertical="true"
         android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_29"
         />


</RelativeLayout>