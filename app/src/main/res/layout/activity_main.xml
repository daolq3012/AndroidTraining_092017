<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSilver"
    android:gravity="center"
    tools:context="com.example.sony.training.MainActivity">

    <TextView
        android:id="@+id/currentTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_20"
        android:text="@string/defaul_time"
        />
    <SeekBar
        android:id="@+id/timeSeekBar"
        android:layout_below="@+id/currentTimeTextView"
        android:layout_width="@dimen/dp_300"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        />
    <TextView
        android:id="@+id/totalTimeTextView"
        android:layout_toEndOf="@+id/currentTimeTextView"
        android:layout_marginStart="@dimen/dp_220"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_20"
        android:text="@string/defaul_time"
        />
    <ImageView
        android:id="@+id/previousButton"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignLeft="@+id/timeSeekBar"
        android:layout_alignStart="@+id/timeSeekBar"
        android:layout_below="@+id/timeSeekBar"
        android:src="@android:drawable/ic_media_previous"
        />
    <ImageView
        android:id="@+id/pauseAndPlayButton"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_toEndOf="@+id/previousButton"
        android:layout_below="@+id/timeSeekBar"
        android:src="@android:drawable/ic_media_play"
        />
    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_toEndOf="@+id/pauseAndPlayButton"
        android:layout_below="@+id/timeSeekBar"
        android:src="@android:drawable/ic_media_next"
        />
</RelativeLayout>
