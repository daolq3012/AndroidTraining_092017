<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/display2_TextView"
            style="@style/textview"
            android:textSize="@dimen/sp_24"
            android:textAlignment="textEnd"/>

        <TextView
            android:id="@+id/display1_TextView"
            style="@style/textview"
            android:clickable="false"
            android:text="@string/zero"
            android:textAlignment="textEnd"
            android:textSize="@dimen/sp_50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/delete_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/del" />

        <Button
            android:id="@+id/deleteOneRow_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/ce" />

        <Button
            android:id="@+id/deleteAll_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/c"/>

        <Button
            android:id="@+id/negativePositiveNumber_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/plusminus" />

        <Button
            android:id="@+id/sqrt_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/sqrt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/seven" />

        <Button
            android:id="@+id/eight_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/eight" />

        <Button
            android:id="@+id/nine_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/nine" />

        <Button
            android:id="@+id/devide_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/devide" />

        <Button
            android:id="@+id/percent_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/percent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/four"/>

        <Button
            android:id="@+id/five_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/five"/>

        <Button
            android:id="@+id/six_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/six" />

        <Button
            android:id="@+id/multi_Button"
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/multi"/>

        <Button
            style="@style/button"
            android:layout_weight="1"
            android:text="@string/oneperx"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/one" />

                <Button
                    android:id="@+id/two_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/two"/>

                <Button
                    android:id="@+id/three_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/three" />

                <Button
                    android:id="@+id/minus_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/minus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero_Button"
                    style="@style/button"
                    android:layout_weight="2"
                    android:text="@string/zero"/>

                <Button
                    android:id="@+id/comma_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/comma" />

                <Button
                    android:id="@+id/plus_Button"
                    style="@style/button"
                    android:layout_weight="1"
                    android:text="@string/plus" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <Button
                android:id="@+id/equal_Button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/equal"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
