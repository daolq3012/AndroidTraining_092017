<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="50dp"
            android:gravity="right"
            />
        <Button
            android:id="@+id/buttonMC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MC"
            android:layout_below="@+id/editNumber"/>
        <Button
            android:id="@+id/buttonMR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR"
            android:layout_toRightOf="@+id/buttonMC"
            android:layout_below="@+id/editNumber"/>
        <Button
            android:id="@+id/buttonMm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M+"
            android:layout_toRightOf="@+id/buttonMR"
            android:layout_below="@+id/editNumber"/>
        <Button
            android:id="@+id/buttonMmM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-"
            android:layout_below="@+id/buttonMC"/>
        <Button
            android:id="@+id/buttonMs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MS"
            android:layout_toRightOf="@+id/buttonMmM"
            android:layout_below="@+id/buttonMR"/>
        <Button
            android:id="@+id/buttonPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_toRightOf="@+id/buttonMs"
            android:layout_below="@+id/buttonMR"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_below="@+id/button7"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_toRightOf="@+id/button4"
            android:layout_below="@+id/button8"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_toRightOf="@+id/button5"
            android:layout_below="@+id/button9"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_below="@+id/button4"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_toRightOf="@+id/button1"
            android:layout_below="@+id/button5"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_toRightOf="@+id/button2"
            android:layout_below="@+id/button6"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_below="@+id/buttonMmM"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_toRightOf="@+id/button7"
            android:layout_below="@+id/buttonMs"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_toRightOf="@+id/button8"
            android:layout_below="@+id/buttonPer"/>
        <Button
            android:id="@+id/btnCanBac2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="^"
            android:layout_below="@+id/button1"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toRightOf="@+id/btnCanBac2"
            android:layout_below="@+id/button2"/>
        <Button
            android:id="@+id/btnPhay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=","
            android:layout_alignBaseline="@+id/btn0"
            android:layout_alignBottom="@+id/btn0"
            android:layout_toRightOf="@+id/btn0"
            android:layout_toEndOf="@+id/btn0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/buttonMm"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttonMm"
            android:layout_toEndOf="@+id/buttonMm"
            android:textStyle="bold"
            android:layout_below="@+id/editNumber" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/buttonPer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttonMm"
            android:layout_toEndOf="@+id/buttonMm"
            android:layout_below="@+id/buttonMm" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="20dp"
            android:layout_alignBottom="@+id/button9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/buttonPer"
            android:layout_toEndOf="@+id/buttonPer"
            android:layout_below="@+id/buttonPer" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="25dp"
            android:layout_alignBottom="@+id/button6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button6"
            android:layout_toEndOf="@+id/button6"
            android:layout_below="@+id/button9" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_alignBottom="@+id/btnPhay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/button3"
            android:layout_toEndOf="@+id/button3"
            android:layout_below="@+id/button6"
            android:textSize="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:layout_below="@+id/btnCanBac2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp" />
    </RelativeLayout>
</RelativeLayout>
