<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sony.training.SearchActivity">

    <TextView
        android:id="@+id/keySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtKeyword"
        android:textSize="@dimen/dp_30" />
    <EditText
        android:id="@+id/edtKeyword"
        android:layout_width="match_parent"
        android:layout_below="@id/keySearch"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/soluongShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtShowSoluong"
        android:layout_below="@id/edtKeyword"
        android:textSize="@dimen/dp_30" />
    <EditText
        android:id="@+id/limitNumberEdittext"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_below="@id/soluongShow"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/limitNumberEdittext"
        android:text="@string/btnSearch"
        android:background="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
</RelativeLayout>

