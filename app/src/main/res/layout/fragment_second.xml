<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.sony.training.SecondFragment">

    <RelativeLayout
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/signup_TextView"
            style="@style/firstActivityTextView"
            android:text="@string/signup"
            android:textSize="@dimen/sp_50"/>
        <TextView
            style="@style/firstActivityTextView"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/describe_signup_TextView"
            android:layout_below="@+id/signup_TextView"
            android:text="@string/describe_register"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/addPhoto_TextView"
            android:layout_below="@+id/describe_signup_TextView"
            android:layout_width="wrap_content"
            android:text="@string/addPhoto"
            style="@style/firstActivityTextView"
            android:textSize="@dimen/sp_20"
            android:width="@dimen/dp_100"
            android:height="@dimen/dp_100"
            android:layout_centerInParent="true"
            android:background="@drawable/circle_shape"/>

        <EditText
            style="@style/firstActivityEdittext"
            android:id="@+id/name_signup_EditText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/addPhoto_TextView"
            android:layout_marginTop="13dp"
            android:hint="@string/hint_name"
            android:inputType="textEmailAddress" />
        <EditText
            style="@style/firstActivityEdittext"
            android:id="@+id/email_signup_EditText"
            android:layout_below="@+id/name_signup_EditText"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_email"/>
        <EditText
            style="@style/firstActivityEdittext"
            android:id="@+id/phone_signup_EditText"
            android:layout_below="@+id/email_signup_EditText"
            android:inputType="textPassword"
            android:hint="@string/hint_phone"/>
        <EditText
            style="@style/firstActivityEdittext"
            android:id="@+id/password_signup_EditText"
            android:layout_below="@+id/phone_signup_EditText"
            android:inputType="textPassword"
            android:hint="@string/hint_password"/>
        <Button
            style="@style/firstActivityEdittext"
            android:text="@string/login"
            android:background="@drawable/button_shape"
            android:id="@+id/register_Button"
            android:layout_below="@+id/password_signup_EditText" />

    </RelativeLayout>
</ScrollView>
