<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.TextAppearance.AppCompat.Menu">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="view_infor">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_intro_views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/text_Intro</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_alignParentLeft">true</item>

    </style>

    <style name="text_title_views">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dp_60</item>
        <item name="android:layout_marginTop">@dimen/px_100</item>
        <item name="android:layout_marginBottom">@dimen/px_20</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="background_views">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/duongvien_goctron</item>
        <item name="android:layout_marginLeft">@dimen/px_85</item>
        <item name="android:layout_marginRight">@dimen/px_85</item>
        <item name="android:textSize">@dimen/dp_30</item>
        <item name="android:layout_marginBottom">@dimen/px_44</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="background_none_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="background_views_none">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/px_33</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="background_none_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/px_33</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="background_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/px_300</item>
        <item name="android:layout_marginBottom">@dimen/px_44</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dp_50</item>
    </style>

    <style name="edtEmailLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/txt_email</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/dp_10</item>
        <item name="android:layout_marginLeft">@dimen/px_200</item>
        <item name="android:layout_marginRight">@dimen/px_200</item>
        <item name="android:background">@drawable/duongvien_goctron</item>

    </style>

    <style name="edtPassLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/px_200</item>
        <item name="android:layout_marginRight">@dimen/px_200</item>
        <item name="android:background">@drawable/duongvien_goctron</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/txt_passlogin</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="firstActivityEdittext" parent="firstActivityTextView">
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:padding">@dimen/dp_15</item>
        <item name="android:background">@drawable/duongvien_goctron</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="firstActivityTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:gravity">center</item>
    </style>

    <item name="txtWelcome" type="id">Welcome</item>

</resources>
